{
  "include": [
    "src/"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "Inactive.createElement",
    "jsxFragmentFactory": "Inactive.Fragment",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types/",
      "./src/@types"
    ]
  }
}
